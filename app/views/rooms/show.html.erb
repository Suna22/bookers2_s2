<%= render 'layouts/errors', obj: @chat %>
<h1><%= @user.name %>さんとのチャット</h1>
<% @chats.each do |chat| %>
  <% if chat.user == current_user %>
    <p class="text-right">
  <% else %>
    <p class="text-left">
  <% end %>
    <%= chat.body %>
  </p>
<% end %>

<%= form_with model:[@user, :room, @chat], local:true do |f| %>
  <div class="field row">
    <%= f.text_area :body, class: 'col-xs-12' %>
  </div>

  <div class="actions row">
    <%= f.submit class: 'btn btn-primary col-xs-12'%>
  </div>
<% end %>

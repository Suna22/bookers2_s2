<div class='row'>

  <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'info', user: @user,now: ''%>

    <h2>New book</h2>
    <%= render 'books/form', book: @book %>

  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <%= render 'books/index',books: @books %>

    <h2>投稿数の前日比・前週比</h2>

    <table class="table">
      <tr>
        <th>今日の投稿数</th>
        <th>前日の投稿数</th>
        <th>前日比</th>
      </tr>
      <tr>
        <td><%= @today_count %></td>
        <td><%= @yesterday_count %></td>
        <td><%= ratio(@today_count, @yesterday_count) %></td>
      </tr>
    </table>

    <table class="table">
      <tr>
        <th>今週の投稿数</th>
        <th>前週の投稿数</th>
        <th>前週比</th>
      </tr>
      <tr>
        <td><%= @week_count %></td>
        <td><%= @lastweek_count %></td>
        <td><%= ratio(@week_count, @lastweek_count) %></td>
      </tr>
    </table>
  </div>

</div>
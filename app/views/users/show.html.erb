<div class='row'>

  <div class='col-xs-3'>
    <h2>User info</h2>
    <%= render 'info', user: @user,now: ''%>

    <h2>New book</h2>
    <%= render 'books/form', book: @book %>

  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <%= render 'books/index',books: @books %>

    <h2>投稿数の前日比・前週比</h2>

    <table class="table">
      <tr>
        <th>今日の投稿数</th>
        <th>前日の投稿数</th>
        <th>前日比</th>
      </tr>
      <tr>
        <td><%= @today_count %></td>
        <td><%= @yesterday_count %></td>
        <td><%= ratio(@today_count, @yesterday_count) %></td>
      </tr>
    </table>

    <table class="table">
      <tr>
        <th>今週の投稿数</th>
        <th>前週の投稿数</th>
        <th>前週比</th>
      </tr>
      <tr>
        <td><%= @week_count %></td>
        <td><%= @lastweek_count %></td>
        <td><%= ratio(@week_count, @lastweek_count) %></td>
      </tr>
    </table>


    <h2>7日分の投稿数</h2>

    <table class="table">
      <tr>
        <% @labels.each do |l| %>
        <th><%= l %></th>
        <% end %>
      </tr>
      <tr>
        <% @week.each do |c| %>
        <td><%= c %></td>
        <% end %>
      </tr>
    </table>

    <canvas id="myChart" width="200" height="100"> </canvas>
    <script>
        var ctx = document.getElementById("myChart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: <%= @labels_j %>,
                datasets: [{
                    label: "投稿数",
                    data: <%= @week %>,
                    backgroundColor: 'rgba(255, 80, 120, 1.0)',
                    borderColor: 'rgba(255, 80, 120, 1.0)',
                    fill: false
                }]
            },
        });
    </script>

    <div>
      <%= form_with url: search_path, method: :get do |f| %>
        <div class="field row">
          <%= f.date_field :date, class: 'col-xs-12 book_title' %>
          <%= f.submit "検索", class: 'btn btn-primary col-xs-12'%>
        </div>
      <% end %>
    </div>

    <div class="result"></div>

  </div>

</div>
<table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.category, tag_search_books_path(tag: book.category) %></td>
        <td class=<%= "table__favorite--" + book.id.to_s %>>
          <%= render 'favorites/book', book: book, user: current_user%>
        </td>
        <td>コメント数: <%= book.book_comments.count %></td>
        <td>
          <div class="relative-post-evaluation">
          <span id="star-rate-<%= book.id %>"></span>
          <script>
            $('#star-rate-<%= book.id %>').raty({
              size: 36,
              starOff: "<%= asset_path('star-off.png') %>",
              starOn: "<%= asset_path('star-on.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              readOnly: true,
              score: <%= book.star %>,
            });
          </script>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>